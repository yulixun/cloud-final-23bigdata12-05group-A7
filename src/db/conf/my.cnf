[mysqld]
# 基础配置
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
port = 3306
datadir = /var/lib/mysql  # Docker 内 MySQL 数据默认路径
socket = /var/run/mysqld/mysqld.sock

# 性能/安全配置（适配容器化）
max_connections = 100
wait_timeout = 600
skip-name-resolve  # 避免容器内 DNS 解析问题

[client]
default-character-set = utf8mb4
port = 3306
socket = /var/run/mysqld/mysqld.sock
